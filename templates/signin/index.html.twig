{%  include '/layout/header.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<body id="bgsignin">


		<div class="container bg-white d-flex w-50 ">
			<form method="post" class="justify-content-between ml-5">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				<h1 class="h3 mb-3 font-weight-normal">Sign In</h1>

				<p>New user ?
					<a href="{{ path('signin') }}">Create an account !</a>
				</p>

				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
				<label for="inputPassword">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="checkbox mb-3">
					<label>
						<input type="checkbox" name="_remember_me">
						Se souvenir de moi ?
					</label>
				</div>


				<button class="btn btn-lg btn-success" type="submit">Se connecter</button>
			</form>


			<span class="block">
				Or sign in with
			</span>


			<img src="{{asset('asset/images/cat.jpg')}}" class="h-50 w-50 justify-content-between ml-5">
		</div>
	</body>
{% endblock %}
