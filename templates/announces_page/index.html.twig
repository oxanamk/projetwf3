{%  extends 'base.html.twig' %}

{% block title %}Nos Annonces
{% endblock %}

{% block body %}
	<header class="p-4">
		<section>
			<h1 class="text-center mt-5">
				Toutes nos annonces !</h1>
		</section>
	</header>

	<main class="d-flex">
		<aside id="cardfilter">
			<div class="card">
				<h1 class="card-header">Affiner la cat√©gorie</h1>
				<section class="card-body">
					{{ form(form)}}
					</section>

				</div>
			</aside>

		<section class="container" id="annoncepage">
			<div class="grid">
				{% for a in annonces %}
					<div class="card">
						<img src="{{asset('asset/images/' ~ a.image)}}" alt="image annonce" class="card-image-top m-auto" style="max-height:280px; max-width:300px;">
						<div class="card-body">
							<div class="justify-content-between d-flex">
								<h4 class="card-title">{{a.prenom}}</h4>
								<span class="text-success font-weight-bold" >
									{{a.statut.statut}}
								</span>
							</div>
							<div class="card-title">
								<p class="text text-muted">{{a.description}}
								</p>
							</div>
						</div>
					</div>

					

				{% endfor %}
			</div>
		</section>	
	</main>


	{% endblock %}
